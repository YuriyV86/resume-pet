<div>
  {{! navigation  }}
  {{> headerNavBlock data=navigation/links}}

  <main>
    <div class="row">

      {{#with formBlock}}
        <div class="col-8">
          <h2 class="mt-4 mb-3">{{header}}</h2>
          <h7 class="mt-4 mb-3">{{rating/title}}: {{rating/value}}</h7>
        
          {{!-- actionBlock --}}
          {{#with actionBlock}}
            {{!-- tabs --}}
            <div class='nav nav-tabs'>
              {{#each tabs}}
                <div class='nav-item'>
                  <a class='nav-link {{#if isActive}}active{{/if}}' href='#' >{{text}}</a>
                </div>
              {{/each}}
            </div>

            {{!-- report --}}
            <div>
              <hr class="my-5">
              {{#with report}}
                <div class="card p-3">
                  <div class="card-title m-0">{{title}}</div>
                  <div class="card-body ps-0 pb-0 pt-2">
                    {{#with button}}
                      <a class='btn btn-secondary' href='{{link}}' >{{text}}</a>
                    {{/with}}
                  </div>
                </div>
              {{/with}}
              <hr class="my-5">
            </div>
          {{/with}}

          {{!-- feedbackBlock --}}
          <div>
            {{#with feedbackBlock}}
              <h3 class="mt-4 mb-5">{{title}}</h3>

              {{#each buttons}}
                <a class="btn 
                  btn{{#if isWarning}}-warning{{/if}}{{#if isSuccess}}-success{{/if}}{{#if isDanger}}-danger{{/if}}" 
                  href="{{link}}"
                  >{{text}}
                </a>
              {{/each}}

            {{/with}}
          </div>
        </div>

        {{!-- goodsInfo --}}
        <div class="col-4 ps-0">
          {{#with goodsInfo}}
            <div class="card p-3 mt-4">
              <div>
                <img src="{{photo}}" alt="{{photo}}">
              </div>
              
              <h5 class="mt-3">{{name}}</h5>
            </div>

            <div class="card mt-3 p-3">
              <h4 class="card-title mt-0"><b>{{price}}</b></h4>
              <div class="card-body ps-0 pb-0">
                <h5 class="mt-3">{{#if inMarket}}Є в наявності{{/if}}</h5>

                {{#each buttons}}
                  <div>
                    <a class="btn btn{{#if isPrimary}}-primary{{else}}-secondary{{/if}} my-2"
                      href="link">
                      {{text}}
                    </a>
                  </div>
                {{/each}}
              </div>            
            </div>

            <div class="card mt-3 p-3">
              {{#with seller}}
                <span>{{title}}: <b>{{value}}</b> </span>
              {{/with}}
            </div>
            
          {{/with}}
        </div>

      {{/with}}
    </div>
    <hr class="mt-5">

    {{!-- reviewList --}}
    <div>
      {{#each reviewList}}
        {{> reviewItem data=this}}
      {{/each}}
    </div>
  
    {{!-- service --}}
    <section class="p-0 mt-5"> 
      {{>ourServicesBlock data=service}} 
    </section>

    <hr class="mt-5">
    {{!-- footer --}}
    {{>footerLinksBlock footer=footer}} 

  </main>
</div>