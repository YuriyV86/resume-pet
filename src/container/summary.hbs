<div>
  {{#with main}}
    <main>
      <section class="py-0">
        {{>title data=summary.title big=true}}
        <div class="ps-3">
          <p>{{summary.text}}</p>
        </div>
      </section>

      {{#with experience}}
        <section class="py-0">
          {{>title data=title big=false}}
          <div class="ps-3">
            <p>{{text}}</p>
          </div>
        </section>
      {{/with}}
    </main>
  {{/with}}  
</div>

