<div>
  {{#with main}}
    <main>
      <section class="py-0">
        {{>title data='My education' big=true}}

        <ul class="my-0">
          {{#each educations}}
            <li>
              {{name}}
              {{#unless isEnd}}
                (ще в процесі),
              {{/unless}}
            </li>
          {{/each}}
        </ul>    
      </section>

      <section class="py-0 mt-4 ps-4">
        {{>title data='My certificates' big=false}}

        <ul class="my-0">
          {{#each certificates}}
            <li>
              {{name}} ({{id}})
            </li>
          {{/each}}
        </ul>        
      </section>      
    </main>
  {{/with}}
</div>