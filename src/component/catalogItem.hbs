<div class="card h-100">
  <img class="card-img-top" src="{{img}}" alt="{{img}}">
  <div class="p-3">
    <div class='card-title'>
      <h6>{{title}}
        <div> 
          {{> badge value=isHot bg-text-type='text-bg-warning me-2' title='HOT!'}}
          {{> badge value=isNew bg-text-type='text-bg-primary me-2' title='Нове'}}
        </div>

        <div class="mt-2">
          {{> badge value=isFast bg-text-type='text-bg-success' title='Швидка доставка' badge-type='rounded-1'}}
        </div>

        <div class="mt-2">
          {{> badge value=isFree bg-text-type='text-bg-secondary' title='Безкоштовна доставка' badge-type='rounded-1'}}
        </div>
      </h6>
    </div>

    <div class="card-body p-0">
      <h5 class="my-3">{{name}}</h5>
      {{review/amount}} {{review/text}}

      <h4 class="my-3">{{price}}</h4>
      <span class="my-3">{{delivery}}</span>

      {{#each buttons}}
        <div class="mt-2">
          {{#if isPrimary}}
            {{> link-button link=link type='primary' text=text}}
          {{else}}
            {{> link-button link=link type='secondary' text=text}}
          {{/if}}
        </div>
      {{/each}}

      <ul  class="mt-3">
        {{#each characteristics}}
          <li>{{title}}: {{value}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>