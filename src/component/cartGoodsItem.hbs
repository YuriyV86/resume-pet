<div class="card mb-4">
  <div class="row g-0" width="110px">
    <div class="col-2 py-1 ps-2">
      <img src="{{image}}" class="img-fluid rounded-start" alt="{{image}}">
    </div>

    <div class="col-10">
      <div class="row ">

        <div class="col-6 ps-0">
          <h5 class="card-title mt-4">{{name}}</h5>
          <p class="card-text">{{description}}</p>
        </div>

        <div class="col-2 mt-4 card-text">
          {{#with price}}
            <div class="mb-2">{{title}}:</div>
            <span><b><big>{{value}}</big></b> </span>
          {{/with}}
        </div>

        <div class="col-2 mt-4 pt-3 card-text text-center"> 
          <span><big>{{amount}}</big></span>
        </div>

        <div class="col-2">
          {{#each buttons}}
            <div class="mt-3">
              <button class="btn 
                btn-{{#if isPrimary}}primary{{else}}{{#if isDanger}}outline-danger{{/if}}{{/if}}">
                {{text}}
              </button>
            </div>
          {{/each}}
        </div>

      </div>
    </div>
  </div>
</div>