<div class="card p-3 mt-5">
  {{#with data/reviewBody}}
    <div class="card">
      <div class="card-header p-2">
        {{#with ../title}}
          <h6 class="mb-2">{{userName}}</h6>
          <h7 class="mt-3">{{caption}}</h7>
          <div class="mt-2"><time>{{date}}</time></div> 
        {{/with}}
      </div>

      <div class="card-body p-2">
        <div>
          {{#with seller}}
            <span>{{title}}: <b>{{value}}</b> </span>
          {{/with}}
        </div>

        <div class="my-3">
          {{#with rating}}
            <span>{{title}}: <b>{{value}}</b> </span>
          {{/with}}
        </div>

        <p class="my-3">{{text}}</p>

        <div class="my-3">
          {{#with advantages}}
            <span><b>{{title}}:</b></span>
            <div>{{text}}</div>
          {{/with}}
        </div>

        <div class="my-3">
          {{#with disadvantages}}
            <span><b>{{title}}:</b></span>
            <div>{{text}}</div>
          {{/with}}
        </div>

        <div class="row g-1">
          {{#each images}}
            <div class="col-2">
              <img src="{{this}}" alt="{{this}}">
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    {{!-- coments --}}
    <div>
      <div class="row g-0">
        <div class="col-1"></div>

        <div class="col-11">
          {{#each coments}}
            <div class="card mt-3">
              <div class="card-title p-2 m-0">
                <h6 class="m-0">{{userName}}</h6>
                <time>{{date}}</time>
              </div>

              <p class="card-body p-2 m-0">{{text}}</p>
            </div>
          {{/each}}
            
        </div>

      </div>
    </div>
  {{/with}}

</div>