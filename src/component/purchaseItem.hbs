<div class="row">

  <div class="col-4">
    <div>{{number}}</div>
    <div class="mt-2"><b>{{status}}</b></div>
  </div>

  <div class="col-2 card-text">
    {{#with amount}}
      <div class="mb-2">{{title}}:</div>
      <span><b><big>{{value}}</big></b> </span>
    {{/with}}
  </div>

  <div class="col-4"> 
    <div class="row">
      {{#each images}}
        <div class="col-4">
          <img class="img-fluid rounded-3" src="{{this}}" alt="{{this}}">
        </div>
      {{/each}}
    </div>
  </div>

  <div class="col-2">
    {{#with button}}
      <div class="mt-2">
        <a href="{{link}}">
          <div class="btn {{#if isPrimary}}btn-primary{{/if}} m-2">{{text}}</div>
        </a> 
      </div>
    {{/with}}
  </div>

</div>
<hr class="my-3">